@model OneToManyDemoMVC.Models.ViewModels.EditBoekViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>
<div>
    <form asp-action="Edit" asp-controller="Boeken">
            <input type="hidden" asp-for="BoekId" /> 
        <div class="form-group">
            <label asp-for="Title" class="control-lable"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="AuteurId" class="control-label"></label>
            <select asp-for="AuteurId" class="form-control"
                    asp-items="@(new SelectList(Model.Auteurs, "AuteurId", "Naam"))"></select>
            <span asp-validation-for="AuteurId" class="text-danger"></span>
        </div>
   
        <div class="form-group">
            <input asp-action="Edit" asp-asp-controller="Boeken" type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>